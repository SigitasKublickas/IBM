model VehicleRecord {
  id          String      @id @default(uuid())
  plateNumber String
  timeStamp   DateTime    @default(now())
  vehicleType VehicleType
  rate        Rate        @relation(fields: [rateId], references: [id])
  rateId      String
}

enum VehicleType {
  Car
  Motercycle
  Truck
}

model Rate {
  id            String          @id @default(uuid())
  startDay      Day
  startHour     Int
  endDay        Day
  endHour       Int
  vehicleType   VehicleType
  amount        Int
  isActive      Boolean
  VehicleRecord VehicleRecord[]
}

enum Day {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}
